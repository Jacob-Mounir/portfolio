              // Remove any existing theme classes
              document.documentElement.classList.remove(
                "theme-blue",
                "theme-green",
                "theme-purple",
                "theme-red"
              );
              // Add new theme class
              document.documentElement.classList.add(`theme-${color}`);
              // Save preference
