---
const { title, description, image } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <body class="min-h-screen bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
    <div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:50px_50px] pointer-events-none min-h-full">
    </div>
    <div class="relative min-h-screen">
      <slot />
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>
  </body>
</html>

<style>
  body {
    min-height: 100vh;
    /* Fallback for browsers that don't support min-h-screen */
    min-height: 100dvh;
    /* Modern viewport height that accounts for mobile browser chrome */
  }
</style>
